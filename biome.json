{
  "extends": ["ultracite"],
  "files": {
    "ignore": ["tailwind.config.js", "node_modules"]
  },
  "linter": {
    "rules": {
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noEmptyInterface": "off"
      },
      "correctness": {
        "noUnusedVariables": "off",
        "noUndeclaredVariables": "off"
      },
      "nursery": {
        "useConsistentMemberAccessibility": "off"
      }
    }
  }
}
